{
  "editor.inlineSuggest.suppressSuggestions": true,
  "editor.minimap.enabled": false,
  "update.mode": "none",
  "vim.smartRelativeLine": true,
  "window.zoomLevel": 2,
  "workbench.editor.empty.hint": "hidden",
  "workbench.startupEditor": "none",
  "go.toolsManagement.autoUpdate": true,
  "alt-editor.name": "emacs",
  "alt-editor.binary": "emacsclient",
  "alt-editor.args": "+{line}:{column} {filename}",
  "alt-editor.terminal": false,
  "amp.debug.usage.enabled": true,
  "amp.thread.soundNotificationOnIdle": true,
  "amp.url": "https://ampcode.com/",
  "amp.anthropic.thinking.enabled": true,
  "amp.mcpServers": {
    "emacs": {
      "command": "npx",
      "args": ["-y", "@keegancsmith/emacs-mcp-server"]
    },
    "linear-issues": {
      "command": "passrun",
      "args": ["mcp", "npx", "-y", "@keegancsmith/linear-issues-mcp-server"]
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"]
    }
  },
  "amp.tab.enabled": true,
  "amp.todos.enabled": true,
  "amp.connections.disable": ["1002"],
  "amp.commands.allowlist": [
    "bazel",
    "git add",
    "git blame",
    "git commit",
    "git log",
    "go build",
    "go test",
    "gofmt",
    "goimports",
    "sg configure",
    "bash -n",
    "shellcheck",
    "nix build",
    "nix-prefetch-url",
    "pnpm"
  ],
  "terminal.integrated.shellIntegration.enabled": false,
  "terminal.commands.vscodeTerminal.fileBasedExitDetection": true,
  "editor.wordBasedSuggestions": "off",
  "amp.tools.disable": [
    "browser_click",
    "browser_close",
    "browser_console_messages",
    "browser_drag",
    "browser_file_upload",
    "browser_generate_playwright_test",
    "browser_handle_dialog",
    "browser_hover",
    "browser_install",
    "browser_navigate",
    "browser_navigate_back",
    "browser_navigate_forward",
    "browser_network_requests",
    "browser_pdf_save",
    "browser_press_key",
    "browser_resize",
    "browser_select_option",
    "browser_snapshot",
    "browser_tab_close",
    "browser_tab_list",
    "browser_tab_new",
    "browser_tab_select",
    "browser_take_screenshot",
    "browser_type",
    "browser_wait_for"
  ],
  "amp.terminal.commands.environment": "node-spawn",
  "amp.permissions": [
    {
      "tool": "Bash",
      "matches": {
        "cmd": "sg * --help"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "go doc"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "go build -o /dev/null"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "bazel"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "git add"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "git blame"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "git commit"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "git log"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "go build"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "go test"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "gofmt"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "goimports"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "sg configure"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "bash -n"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "shellcheck"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "nix build"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "nix-prefetch-url"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "pnpm"
      },
      "action": "allow"
    }
  ]
}
