{
  "editor.inlineSuggest.suppressSuggestions": true,
  "editor.minimap.enabled": false,
  "update.mode": "none",
  "vim.smartRelativeLine": true,
  "window.zoomLevel": 2,
  "workbench.editor.empty.hint": "hidden",
  "workbench.startupEditor": "none",
  "go.toolsManagement.autoUpdate": true,
  "alt-editor.name": "emacs",
  "alt-editor.binary": "emacsclient",
  "alt-editor.args": "+{line}:{column} {filename}",
  "alt-editor.terminal": false,
  "amp.debug.usage.enabled": true,
  "amp.thread.soundNotificationOnIdle": true,
  "amp.url": "https://ampcode.com/",
  "amp.anthropic.thinking.enabled": true,
  "amp.mcpServers": {
    "emacs": {
      "command": "npx",
      "args": ["-y", "@keegancsmith/emacs-mcp-server"]
    },
    "linear-issues": {
      "command": "passrun",
      "args": ["mcp", "npx", "-y", "@keegancsmith/linear-issues-mcp-server"]
    }
  },
  "amp.todos.enabled": true,
  // I use the direnv extension and the login shell doesn't seem to run direnv
  "amp.loadLoginShellEnvironment": "never",
  "terminal.integrated.shellIntegration.enabled": false,
  "amp.connections.disable": ["1002"],
  "amp.commands.allowlist": [
    "bazel",
    "git add",
    "git blame",
    "git commit",
    "git log",
    "gofmt",
    "goimports",
    "sg configure"
  ]
}
