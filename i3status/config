general {
        colors = true
        interval = 5
}

order += "load"
order += "memory"
order += "tztime local"

load {
        format = "%1min"
}

memory {
        format = "%used | %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}
